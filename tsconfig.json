{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable"],
    "typeRoots": ["node_modules/@types"],
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "removeComments": true,
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
